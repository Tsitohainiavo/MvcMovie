@model IEnumerable<Test>
@{
    ViewData["Title"] = "Liste des Tests";
}

<h2>Liste des Tests</h2>
<p>Base de données : @ViewBag.DatabaseName</p>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <p>Nombre total d'enregistrements : @Model.Count()</p>
</div>
